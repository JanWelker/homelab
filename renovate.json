{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 5pm"
  ],
  "includePaths": [
    "renovate.json",
    "payload/**"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/payload/.+\\.yaml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/payload/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/payload/.+values\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchFileNames": [
        "payload/**"
      ],
      "groupName": "Kubernetes payload updates"
    }
  ]
}
